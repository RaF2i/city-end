{
  // Wrangler config for Cloudflare Workers / static assets.
  // Frontend-only deployment - no custom routes or account_id needed
  "name": "gg-site",
  "compatibility_date": "2026-01-05",
  "workers_dev": true,
  // Use `assets.directory` so `wrangler` uploads your `dist` folder during deploy
  "assets": {
    "directory": "./dist"
  },
  "build": {
    "command": "npm run build",
    "cwd": ".",
    "watch_dir": "src"
  }
}